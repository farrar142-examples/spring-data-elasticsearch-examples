{
  "analysis": {
    "filter": {
      "edge_ngram_filter": {
        "type": "edge_ngram",
        "min_gram": 1,
        "max_gram": 20
      },
      "synonym_filter": {
        "type": "synonym_graph",
        "synonyms": [
          "김치찌개, kimchi stew"
        ]
      }
    },
    "analyzer": {
      "autocomplete_index_analyzer": {
        "type": "custom",
        "tokenizer": "standard",
        "filter": ["lowercase", "edge_ngram_filter"]
      },
      "autocomplete_search_analyzer": {
        "type": "custom",
        "tokenizer": "standard",
        "filter": ["lowercase"]
      },
      "synonym_analyzer": {
        "type": "custom",
        "tokenizer": "nori_tokenizer",
        "filter": ["lowercase", "synonym_filter"]
      }
    }
  }
}
